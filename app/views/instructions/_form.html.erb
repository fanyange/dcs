<%= form_for([@document, @instruction]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_area :content, class: 'form-control', placeholder: '批示内容', required: true %>
  </div>
  <div class="form-inline">
    <div class="form-group">
      <%= render 'leaders/chooser', f: f %>

      <div class="input-group date">
        <%= f.text_field :deadline, class: 'form-control', placeholder: '截止日期（可选）'  %>
        <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
      </div>

      <%= f.submit "#{submit or '添加'}", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
