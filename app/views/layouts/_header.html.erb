<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'DCS', '/', class: 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav">
      <li><%= link_to '文件', documents_path %></li>
      <li><%= link_to '批示', instructions_path %></li>
      <li><%= link_to '领导', leaders_path %></li>
      <li><%= link_to '资料', '#' %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if logged_in? %>
        <% if current_user.admin %>
          <li><%= link_to '所有文件', all_documents_path  %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class='dropdown-toggle' data-toggle='dropdown' role='button'>
            <%= current_user.name %><span class='caret'></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to '个人资料', current_user %></li>
            <li><%= link_to '设置', '#' %></li>
            <li class="divider"></li>
            <li><%= link_to '登出', logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to '登录', login_path %></li>
      <% end %>
    </ul>
    <form class="navbar-form navbar-right" action="/documents">
      <div class="input-group">
        <input class="form-control" name='search' type="text" placeholder='搜索'>
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </button>
        </span>
      </div>
    </form>
  </div>
</header>
